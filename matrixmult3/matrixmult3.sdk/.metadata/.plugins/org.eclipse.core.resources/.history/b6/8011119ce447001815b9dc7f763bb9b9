/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "string.h"
#include "xil_printf.h"
#include "xgpio.h"
#include "xscugic.h"
#include "xil_exception.h"
#include "xparameters.h"
#include "xuartps.h"

#define UART_BASEADDR XPAR_PS7_UART_1_BASEADDR
#define GPIO_DEVICE_ID  XPAR_AXI_GPIO_0_DEVICE_ID	/* GPIO device that LEDs are connected to */
#define LED 0x9										/* Initial LED value - X00X */
#define LED_DELAY 40000000							/* Software delay length */
#define LED_CHANNEL 1								/* GPIO port for LEDs */

XGpio Gpio;											/* GPIO Device driver instance */

int main()
{
    init_platform();

    print("Welcome to the demo speaker ID FPGA front-end application!\n");
    char message[] = "Press 's' to start speaker verification! Any other key to repeat menu.\n";

	u8 inp = 0x00;
	u32 CntrlRegister;
	CntrlRegister = XUartPs_ReadReg(UART_BASEADDR, XUARTPS_CR_OFFSET);

	XUartPs_WriteReg(UART_BASEADDR, XUARTPS_CR_OFFSET,
				  ((CntrlRegister & ~XUARTPS_CR_EN_DIS_MASK) |
				   XUARTPS_CR_TX_EN | XUARTPS_CR_RX_EN));

	volatile int Delay;
	int Status;
	int led = LED;
	Status = XGpio_Initialize(&Gpio, GPIO_DEVICE_ID);

	while (!XUartPs_IsReceiveData(UART_BASEADDR));
	print(message);
	do {
		while (!XUartPs_IsReceiveData(UART_BASEADDR));
		inp = XUartPs_ReadReg(UART_BASEADDR, XUARTPS_FIFO_OFFSET);

		switch(inp){
		case 13:
			break;
		case 's':
			xil_printf("Pressed s\r\n");
			print(message);
			break;
		default:
			xil_printf("Pressed %d\r\n", inp);
			print(message);
			break;
		}
	} while(1);


	if (Status != XST_SUCCESS) {
		xil_printf("GPIO output to the LEDs failed!\r\n");

	} else {
		/*Set the direction for the LEDs to output. */
		XGpio_SetDataDirection(&Gpio, LED_CHANNEL, 0x0);

		/* Loop forever blinking the LED. */
		while (1) {
			/* Write output to the LEDs. */
			XGpio_DiscreteWrite(&Gpio, LED_CHANNEL, led);

			/* Flip LEDs. */
			led = ~led;

			/* Wait a small amount of time so that the LED blinking is visible. */
			for (Delay = 0; Delay < LED_DELAY; Delay++);
		}
	}

    cleanup_platform();
    return 0;
}
